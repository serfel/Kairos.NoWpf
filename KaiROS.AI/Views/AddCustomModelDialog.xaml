<Window x:Class="KaiROS.AI.Views.AddCustomModelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Custom Model"
        Width="500"
        Height="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="âž• Add Custom Model" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Add a local .gguf file or download from URL" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Model Name -->
            <TextBlock Text="Display Name *" 
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="DisplayNameBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,16"/>
            
            <!-- Source Type -->
            <TextBlock Text="Source" 
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <RadioButton x:Name="LocalFileRadio" 
                             Content="ðŸ“ Local File" 
                             IsChecked="True"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,24,0"/>
                <RadioButton x:Name="DownloadUrlRadio" 
                             Content="ðŸŒ Download URL"
                             Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>
            
            <!-- Local File Path -->
            <StackPanel x:Name="LocalFilePanel">
                <TextBlock Text="File Path *" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="FilePathBox"
                             Style="{StaticResource ModernTextBox}"
                             IsReadOnly="True"/>
                    <Button Grid.Column="1" 
                            Content="Browse..."
                            Click="BrowseFile_Click"
                            Style="{StaticResource SecondaryButton}"
                            Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>
            
            <!-- Download URL -->
            <StackPanel x:Name="DownloadUrlPanel" Visibility="Collapsed">
                <TextBlock Text="Download URL *" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="DownloadUrlBox"
                         Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Hugging Face direct link to .gguf file" 
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="11"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Description -->
            <TextBlock Text="Description (optional)" 
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       Margin="0,16,0,8"/>
            <TextBox x:Name="DescriptionBox"
                     Style="{StaticResource ModernTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="60"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,12,0"/>
            <Button Content="Add Model" 
                    Click="AddModel_Click"
                    Style="{StaticResource AccentButton}"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>
