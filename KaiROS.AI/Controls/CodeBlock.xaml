<UserControl x:Class="KaiROS.AI.Controls.CodeBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="#1e1e2e" 
            CornerRadius="8" 
            Padding="0"
            BorderBrush="#313244"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header with language and copy button -->
            <Border Background="#181825" 
                    CornerRadius="8,8,0,0" 
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="LanguageLabel"
                               Text="code"
                               Foreground="#6c7086"
                               FontSize="12"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                    
                    <Button x:Name="CopyButton"
                            Grid.Column="1"
                            Click="CopyButton_Click"
                            Cursor="Hand"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,4">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#313244"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="CopyIcon" Text="ðŸ“‹" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock x:Name="CopyText" Text="Copy" Foreground="#a6adc8" FontSize="12"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Code content -->
            <ScrollViewer Grid.Row="1" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="400">
                <TextBlock x:Name="CodeContent"
                           FontFamily="Consolas, 'Courier New', monospace"
                           FontSize="13"
                           Foreground="#cdd6f4"
                           Padding="16,12"
                           TextWrapping="NoWrap"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
