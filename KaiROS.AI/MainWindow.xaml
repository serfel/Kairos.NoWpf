<Window x:Class="KaiROS.AI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:KaiROS.AI.Views"
        xmlns:vm="clr-namespace:KaiROS.AI.ViewModels"
        xmlns:converters="clr-namespace:KaiROS.AI.Converters"
        Title="KaiROS AI" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        
        <DataTemplate DataType="{x:Type vm:ModelCatalogViewModel}">
            <views:ModelCatalogView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChatViewModel}">
            <views:ChatView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DocumentViewModel}">
            <views:DocumentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" MinWidth="200" MaxWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo / Title -->
                <Border Padding="24,24,24,16">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Assets/logo.png" Width="48" Height="48" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock FontSize="24" FontWeight="Bold">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#6366F1" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <Run Text="Kai"/><!--
                                --><Run Text="ROS" Foreground="{StaticResource TextPrimaryBrush}"/><!--
                                --><Run Text=" AI"/>
                            </TextBlock>
                            <TextBlock Text="Local AI Assistant" 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="11"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Items -->
                <ListBox Grid.Row="1" 
                         SelectedIndex="{Binding SelectedNavigationIndex}"
                         Style="{StaticResource ModernListBox}"
                         Padding="12,0">
                    <ListBoxItem Style="{StaticResource ModernListBoxItem}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" FontSize="18" Margin="0,0,12,0"/>
                            <TextBlock Text="Models" FontSize="14"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ModernListBoxItem}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💬" FontSize="18" Margin="0,0,12,0"/>
                            <TextBlock Text="Chat" FontSize="14"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ModernListBoxItem}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" FontSize="18" Margin="0,0,12,0"/>
                            <TextBlock Text="Documents" FontSize="14"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ModernListBoxItem}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙" FontSize="18" Margin="0,0,12,0"/>
                            <TextBlock Text="Settings" FontSize="14"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                
                <!-- Status Footer -->
                <Border Grid.Row="2" 
                        Background="{StaticResource CardBrush}" 
                        Padding="16"
                        Margin="12,0,12,12"
                        CornerRadius="8">
                    <StackPanel>
                        <!-- Active Model -->
                        <StackPanel Visibility="{Binding ActiveModelName, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Active Model" 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="11"/>
                            <TextBlock Text="{Binding ActiveModelName}" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="No model loaded" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12"
                                   Visibility="{Binding ActiveModelName, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                        
                        <Border Height="1" 
                                Background="{StaticResource BorderBrush}" 
                                Margin="0,12"/>
                        
                        <!-- Hardware Status -->
                        <TextBlock Text="{Binding HardwareInfo}" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Resizable Splitter -->
        <GridSplitter Grid.Column="1" 
                      Width="4" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      Cursor="SizeWE">
            <GridSplitter.Style>
                <Style TargetType="GridSplitter">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </GridSplitter.Style>
        </GridSplitter>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Content -->
            <ContentControl Content="{Binding CurrentView}" 
                            Margin="32"/>
            
            <!-- Loading Overlay -->
            <Border Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Initializing..." 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="16"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Status Bar -->
            <Border Grid.Row="1" 
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="16,8">
                <Grid>
                    <TextBlock Text="{Binding StatusText}" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="{StaticResource ErrorBrush}"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVis}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
